<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:id="@+id/tv_collection_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/fragment_me_cancel"
            android:textColor="@color/text_colorlist_selector"/>


        <EditText
            android:textSize="@dimen/normalEditTextSize"
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@color/bg_gray"
            android:hint="@string/collection_add_search"
            android:padding="4dp"
            android:textColorHint="@color/hint_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/collection_add_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="@color/fengexian_color"/>

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:padding="8dp"
            android:text="@string/collection_add_subtitle_nearby_bus"
            android:textColor="@color/hint_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="@color/fengexian_color"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
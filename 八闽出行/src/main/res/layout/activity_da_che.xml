<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiton.bamin.changtukepiao.Cdachezuche.DaChe.DaCheActivity">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="八闽出行"
            android:id="@+id/textView176"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/dache_linear"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/lvyuan2x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView46"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="17dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="正在追踪您的地址"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView46"
                android:layout_toEndOf="@+id/imageView46"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="17dp"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:id="@+id/textView81"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/huangyuan2x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView47"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="17dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="请输入目的地"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView47"
                android:layout_toEndOf="@+id/imageView47"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="17dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

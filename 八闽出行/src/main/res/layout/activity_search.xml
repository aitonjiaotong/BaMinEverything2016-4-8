<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.aiton.bamin.changtukepiao.Gkuaidibao.activity.SearchActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout17"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_header_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            style="@style/title_bar_text_style"
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="查件"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout17">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <AutoCompleteTextView
                    android:completionThreshold="1"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/normalEditTextSize"
                    android:hint="请输入快递公司"
                    android:background="@drawable/edit_kuaidi_shape"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editText_kuaidi_company"/>

                <ImageView
                    android:src="@mipmap/more16"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="19dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <AutoCompleteTextView
                    android:completionThreshold="1"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/normalEditTextSize"
                    android:hint="请输入快递单号"
                    android:background="@drawable/edit_kuaidi_shape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editText_kuaidi_code"/>

                <ImageView
                    android:src="@mipmap/kuaidi_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_kuaidi_camera"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="21dp"/>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:background="@drawable/btn_select"
            android:layout_margin="20dp"
            android:textSize="@dimen/normalTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询"
            android:id="@+id/button_search"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</RelativeLayout>

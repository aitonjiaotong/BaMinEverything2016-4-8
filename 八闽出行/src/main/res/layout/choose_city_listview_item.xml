<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/choose_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="111111111111111"
            android:textSize="18dp"
            android:textColor="@color/bg_transparent_black"/>

        <ImageView
            android:id="@+id/iv_choosecity_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:src="@mipmap/ico_check"/>
    </LinearLayout>
    <TextView
        android:id="@+id/choose_city_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:text="11111111111111111111"/>

</LinearLayout>
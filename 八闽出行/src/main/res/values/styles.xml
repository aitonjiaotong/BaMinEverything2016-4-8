<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="title_bar_text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="myratingbar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>


    <style name="AnimFromButtomToTop">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
    <!--公交-->
    <style name="transfer_tv_style01">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tv_title_actionbar">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RechargeItem">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/bg_red</item>
    </style>
